{
  "name": "espera",
  "version": "1.0.0",
  "description": "Simple async wrapper to wait for a certain amount of time",
  "source": "src/index.ts",
  "main": "./dist/index.js",
  "module": "./dist/index.umd.js",
  "typings": "./dist/index.d.ts",
  "files": [
    "src",
    "dist"
  ],
  "scripts": {
    "build": "microbundle",
    "dev": "microbundle watch",
    "test": "jest",
    "coverage": "jest --coverage && cat ./coverage/lcov.info",
    "docs": "typedoc src/index.ts --readme README.md --gitRevision master",
    "prepublish": "pnpm run build"
  },
  "sideEffects": false,
  "repository": {
    "type": "git",
    "url": "https://github.com/alrico88/espera"
  },
  "keywords": [
    "async",
    "wait",
    "sleep"
  ],
  "author": "Alberto Rico",
  "license": "MIT",
  "devDependencies": {
    "@types/jest": "^27.0.1",
    "@typescript-eslint/eslint-plugin": "^4.31.1",
    "@typescript-eslint/parser": "^4.31.1",
    "eslint": "^7.32.0",
    "eslint-config-airbnb-base": "^14.2.1",
    "eslint-config-airbnb-typescript": "^14.0.0",
    "eslint-plugin-import": "^2.24.2",
    "jest": "^27.2.0",
    "microbundle": "^0.13.3",
    "ts-jest": "^27.0.5",
    "tslib": "^2.3.1",
    "typedoc": "^0.22.3",
    "typedoc-plugin-markdown": "^3.11.0"
  }
}
